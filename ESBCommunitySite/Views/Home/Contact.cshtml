@model ESBCommunitySite.Models.ContactInfo

@{
    ViewData["Title"] = "Contact";
    Layout = null;
}
<! DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact</title>
</head>
<body>
    <form asp-action="Contact" method="post">
        <div>
            <label asp-for="Recipient">Recipient Name</label>
            <input asp-for="Recipient" />
        </div>
        <div>
            <label asp-for="MessageText">Message Text</label>
            <textarea asp-for="MessageText"></textarea>
        </div>
        <div>
            <label>Message Priority</label>
            <select asp-for="MessagePriority">
                <option value="0">No Priority</option>
                <option value="1">Less Priority</option>
                <option value="2">Some Priority</option>
                <option value="3">Most Priority</option>
            </select>
        </div>
        <div>
            <label asp-for="Sender">Sender Name</label>
            <input asp-for="Sender" />
        </div>
        <button type="submit">Send</button>
    </form>
    <div>Click <a asp-action="ShowMail">here to view your mailbox of sent and
        received messages</a></div>
</body>
</html>
