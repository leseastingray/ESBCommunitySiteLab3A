@model IEnumerable<ESBCommunitySite.Models.ContactInfo>

@{
    Layout = null;
}
<! DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MailBox</title>
</head>
<body>
    <h2>Mailbox</h2>
    <table>
        <thead>
            <tr>Recipient</tr>
            <tr>Message Content</tr>
            <tr>Sender</tr>
        </thead>
        <tbody>
            @foreach (ESBCommunitySite.Models.ContactInfo r in Model)
            {
                <tr>
                    <td>@r.Recipient</td>
                    <td>@r.MessageText</td>
                    <td>@r.MessagePriority</td>
                    <td>@r.Sender</td>
                    <td>@r.MessageDate</td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <button asp-action="GetPriorityMail" asp-route="r.MessagePriority">Sort Mail by Priority</button>
        <button asp-action="GetMail" asp-route="r.MessageDate">Sort Mail by Time Sent</button>
    </div>
</body>
</html>

